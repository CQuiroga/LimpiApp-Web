
<%= form_with model: @contacto, local: true do |f| %>

  <% if @contacto.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@contacto.errors.count, "error") %> prohibido,
        Este Formulario Contiene:
      </h2>
      <ul>
        <% @contacto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label 'Primer nombre:' %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :nombre %><br /><br />
</div>

<div class="field">
  <%= f.label 'Correo electrónico:' %> &nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :email %><br /><br />
</div>

<div class="field">
  <%= f.label 'Teléfono de contacto:' %> &nbsp;
  <%= f.text_field :telefono %><br /><br />
</div>

<div class="field">
  <%= f.label 'Mensaje:' %> <br />
  <%= f.text_area :mensaje, size: '44px x 50px' %><br /><br />
</div>
<br />
<%= f.submit 'Guardar' %>
<% end %>
